{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [

        {
            "name": "client",
            "image": "dip1683/multi-client",
            "hostname": "client",
            "essential": false,
            "memory" : 128
        },

        {
            "name": "server",
            "image": "dip1683/multi-server",
            "hostname": "api",
            "essential": false,
            "memory" : 128
        },

        {
            "name": "worker",
            "image": "dip1683/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory" : 128
        },

        {
            "name": "nginx",
            "image": "dip1683/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],

            "links": ["client", "server"],
            "memory" : 128
        }

    ]

}